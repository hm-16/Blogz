<%- include("partials/header.ejs") -%> 
<div class="bodycont">
<h1>Home</h1>  

<p> <%= homeStartingContent %> </p> 

<% blogs.forEach(function(blog){ %> <!-- method to replace blog[i].blogTitle type of traditional method-->
    <h1><%= blog.title %></h1> 
    <p>
        <%= blog.content.slice(0,50).concat("....") %>
        <a href="/post/<%= blog._id %>">Read More</a>
    </p>
    <form class="" action="/delete" method="post">
        <button class="btn btn-secondary" type="submit" name="button" value="<%= blog._id%>">Delete</button>
    </form>
<% }); %>
</div>
